<% include ../partials/header %>
<div class="container">
    <div class="row">
      <h1 style="text-align:center">Add new comment to <%=camp.name %></h1>
      <div style="width: 30%; margin: 25px auto"></div>
      <form action="/campgrounds/<%= camp._id %>/comments" method="POST">
        <div class= "form-group">
          <input class="form-control" type="text" name= "comment[text]" placeholder="comment goes here">
         </div> 
         
         <div class= "form-group">
           <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
         </div>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>
</div>
<% include ../partials/footer %>
