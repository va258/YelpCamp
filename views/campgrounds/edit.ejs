

<% include ../partials/header %>


<h1>Edit</h1>
<div class="container">
    <div class="row">
      <h1 style="text-align:center">Edit <%= camp.name%></h1>
      <div style="width: 30%; margin: 25px auto"></div>
      <form action="/campgrounds/<%= camp._id%>?_method=PUT" method="POST">
        <div class= "form-group">
          <input class="form-control" type="text" name= "camp[name]" value="<%= camp.name%>">
         </div> 
         <div class= "form-group">
          <input class="form-control" type="number" name= "camp[price]" value="<% camp.price %>" min="0.01" step="0.1">
         </div> 
         <div class= "form-group">
           <input class="form-control" type="text" name="camp[image]" value="<%= camp.image%>">
         </div> 
          <div class= "form-group">
           <input class="form-control" type="text"  name="camp[description]" value="<%= camp.description %>"></input>
         </div> 
         <div class= "form-group">
           <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
         </div>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>
</div>

<% include ../partials/footer %>
